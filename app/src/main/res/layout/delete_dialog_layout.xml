<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_card_white_fill"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:letterSpacing=".07"
        android:padding="5dp"
        android:text="Delete the Journal?"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:background="@drawable/rect_card_green"
            android:fontFamily="@font/nunito_bold"
            android:padding="3dp"
            android:text="Yes"
            android:textAlignment="center"
            android:textColor="#00E676"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/rect_card_red"
            android:fontFamily="@font/nunito_bold"
            android:padding="3dp"
            android:text="No"
            android:textAlignment="center"
            android:textColor="#B81307"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
